@{
}

@model List<Pizza>

@if (Model.Count() == 0)
{
    <h3 class="text-center">Non sono presenti Pizze.</h3>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>foto</th>
                <th>nome</th>
                <th>Descrizione</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pizza pizza in Model)
            {
                <tr>
                   
                    <td class="image">
                        <img class="post-list-image" src="@pizza.Image">
                    </td>
                    <td class="title">@pizza.Name</td>
                    <td class="description">
                        @pizza.Description
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

